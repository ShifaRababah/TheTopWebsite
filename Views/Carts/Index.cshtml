@model IEnumerable<TheTopWebsite.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";


    var SumProd = ViewBag.SumProd;
    var BalanceCus = ViewBag.BalanceCus;
    var PriceAfterDic = ViewBag.PriceAfterDic;
}


<div class="container" style="margin-top:100px; margin-bottom:100px">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>

                <th>
                    Price
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>


                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

                <td>
                    @PriceAfterDic
                </td>
            </tr>
            }

        </tbody>
    </table>
   
    <form method="POST" asp-action="CheckOut" asp-controller="Carts">
        <input type="text" name="Cupon" placeholder="Enter Cupon Code" />
        <input type="submit" class="btn" style="background-color: #3fbbc0; color:white" value="Check Out">
    </form>

</div>

