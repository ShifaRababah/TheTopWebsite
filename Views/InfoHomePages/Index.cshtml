@model IEnumerable<TheTopWebsite.Models.InfoHomePage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
<h3>Edit Info in home Page :</h3>
<div class="container">

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CallUs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CallUs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <img src=@Url.Content("~/imgs/" + item.Logo) style="height:100px; width:100px;" />
                        @*@Html.DisplayFor(modelItem => item.Logo)*@
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                     
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>